import java.util.*;
class lengths
{
 public static void main(String args[])
  {
   int sum=0;
   String str;
   Scanner sc=new Scanner(System.in);
   System.out.print("Enter String:");
   str=sc.nextLine();
   String ch[]=str.split(" ");
   int n=ch.length;
   if(n!=0)
   {
     for(int i=n-1;i>=0;i--)
      {
       
        String s=ch[i];
        int t=s.length();
        sum=sum+t;
       }
        System.out.print(sum);
    }
  else
     System.out.print(n);
}
}
